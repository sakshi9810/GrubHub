
<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To GrubHub</h1>
            <p>View our hand-picked food festivals from all around the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/foodFestival/new">Add New Food Festival</a>
            </p>
        </div>
    </header>

<div class="row text-center" style="display:flex; flex-wrap:wrap;">
    <%varFood.forEach(function(FEST){ %>

        <div class="col-md-4 col-sm-8">
            <div class="thumbnail">
                <img src="<%= FEST.image %>">
                <div class="caption">
                    <h4><%= FEST.name %></h4>
                    <h5><%= FEST.location %></h5>
                </div>
                <p>
                   <a href="/foodFestival/<%= FEST._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
    
    <%}) %>
</div>

<%- include ("../partials/footer") %>