
<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h2 style="text-align: center;">Add New Comment to <%= varcg.name %></h2>
        
        <div style="width: 30%; margin: 25px auto;">
            
            <p style="text-align: center;">Fill the entries required to add new Comment</p>
            
            <form action="/foodFestival/<%= varcg._id %>/comment" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="commentdata[text]" placeholder="text">
                </div>

                <div class="form-group">
                    <button class="btn-btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            
            <a href="/foodFestival">Go Back</a>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>
